{{#if addNewQuestion}}
  <h4>New Question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="information">Extra Information</label>
        {{input value=information id="information"}}
      </div>

      <button class="waves-effect waves-light btn" {{action 'saveQuestion1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="waves-effect waves-light btn" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
