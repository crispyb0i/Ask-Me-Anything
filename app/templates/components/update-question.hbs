{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">content</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="information">information</label>
        {{input value=information id="information" placeholder=question.information}}
      </div>

      <button class="waves-effect waves-light btn" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="waves-effect waves-light btn" {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
